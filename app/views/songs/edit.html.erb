<% if @song.errors.any? %>
    <div id='error_explanation'>
        <ul>
            <% @song.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <%= form_for @song do |f| %>
        <%= f.text_field :title %>
        <%= f.text_field :artist_name %>
        <%= f.text_field :genre %>
        <%= f.check_box :released %>
        <%= f.number_field :release_year %>

        <%= f.submit %>
    <% end %>
<% else %>
    <%= form_for @song do |f| %>
        <%= f.text_field :title %>
        <%= f.text_field :artist_name %>
        <%= f.text_field :genre %>
        <%= f.check_box :released %>
        <%= f.number_field :release_year %>

        <%= f.submit %>
    <% end %>
<% end %>